# AIGuard Configuration

# Model Configuration
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
TRANSFORMER_MODEL=distilbert-base-uncased
DEVICE=cpu
CACHE_DIR=./cache

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=INFO

# Detection Thresholds
PROMPT_INJECTION_THRESHOLD=0.75
JAILBREAK_THRESHOLD=0.80
SEMANTIC_SIMILARITY_THRESHOLD=0.85
PII_CONFIDENCE_THRESHOLD=0.75

# Feature Flags
ENABLE_PATTERN_DETECTION=true
ENABLE_SEMANTIC_DETECTION=true
ENABLE_LLM_BASED_DETECTION=false
ENABLE_PII_DETECTION=true
ENABLE_ENCODING_DETECTION=true
ENABLE_OUTPUT_FILTERING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
MAX_PROMPT_LENGTH=10000
MAX_OUTPUT_LENGTH=50000
BLOCKED_IPS=

# OpenAI API (for LLM-based detection)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
