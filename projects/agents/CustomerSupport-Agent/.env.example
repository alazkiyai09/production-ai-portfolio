# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_NAME=CustomerSupport-Agent
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
WS_PORT=8001

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/support.db

# Vector Store (ChromaDB)
CHROMA_PERSIST_DIR=./data/chroma_db
COLLECTION_NAME=faq_knowledge_base
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Knowledge Base
KNOWLEDGE_BASE_PATH=./data/knowledge_base
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=3

# Conversation Memory
MEMORY_TYPE=postgres  # Options: postgres, sqlite, memory
MAX_CONVERSATION_HISTORY=20
SESSION_TIMEOUT_HOURS=24

# Sentiment Analysis
SENTIMENT_THRESHOLD=0.3  # Threshold for negative sentiment
FRUSTRATION_KEYWORDS=angry,frustrated,terrible,awful,hate,stupid,useless

# Human Handoff
HANDOFF_THRESHOLD=-0.5  # Sentiment score triggering handoff
MAX_AI_TURNS=10  # Max AI responses before suggesting human
HUMAN_HANDOFF_MESSAGE="I'm connecting you with a human agent who can better assist you."

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_WS_CONNECTIONS_PER_USER=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
