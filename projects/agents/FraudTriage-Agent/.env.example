# =============================================================================
# FraudTriage-Agent Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# LLM Configuration - GLM-4.7 (Primary)
# -----------------------------------------------------------------------------
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_MODEL=glm-4-plus
GLM_TEMPERATURE=0.1
GLM_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# LLM Configuration - OpenAI (Fallback/Optional)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# LangSmith Configuration (Optional - for tracing)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=fraud-triage-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_TYPE=langgraph
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300

# Human-in-the-loop settings
HUMAN_IN_LOOP_ENABLED=true
HIGH_RISK_THRESHOLD=70
MEDIUM_RISK_THRESHOLD=40

# -----------------------------------------------------------------------------
# Database Configuration (for storing alerts and decisions)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/fraud_triage.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/fraud_triage

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# External API Configuration (Mock fraud data sources)
# -----------------------------------------------------------------------------
TRANSACTION_SERVICE_URL=http://localhost:8001/api/transactions
CUSTOMER_SERVICE_URL=http://localhost:8002/api/customers
DEVICE_FINGERPRINT_URL=http://localhost:8003/api/devices
CASE_MANAGEMENT_URL=http://localhost:8004/api/cases

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_ASYNC_TOOLS=true
ENABLE_CACHE=true
ENABLE_AUDIT_LOGGING=true
MOCK_EXTERNAL_APIS=true  # Set to false to use real APIs
