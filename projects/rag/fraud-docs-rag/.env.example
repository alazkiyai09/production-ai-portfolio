# ============================================================================
# FraudDocs-RAG Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=FraudDocs-RAG
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ----------------------------------------------------------------------------
# Data Paths
# ----------------------------------------------------------------------------
DATA_DIR=./data
DOCUMENTS_DIR=./data/documents
RAW_DOCUMENTS_DIR=./data/raw
VECTOR_STORE_DIR=./data/vector_store
LOGS_DIR=./logs

# ----------------------------------------------------------------------------
# LLM Configuration - Ollama (Development)
# ----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=300

# ----------------------------------------------------------------------------
# LLM Configuration - GLM-4 (Production/Demo)
# ----------------------------------------------------------------------------
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_MODEL=glm-4-plus
GLM_TEMPERATURE=0.7
GLM_MAX_TOKENS=4096
GLM_TIMEOUT=300

# ----------------------------------------------------------------------------
# LLM Configuration - OpenAI Compatible (Alternative)
# ----------------------------------------------------------------------------
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o
# OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=4096

# ----------------------------------------------------------------------------
# Embeddings Configuration
# ----------------------------------------------------------------------------
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DIMENSION=384

# ----------------------------------------------------------------------------
# ChromaDB Configuration
# ----------------------------------------------------------------------------
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=financial_documents
CHROMA_DISTANCE_FUNCTION=cosine

# ----------------------------------------------------------------------------
# Chunking Configuration
# ----------------------------------------------------------------------------
CHUNKING_STRATEGY=semantic
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SEMPHERIC_CHUNK_BUFFER_SIZE=1
SEMPHERIC_CHUNK_BREAKPOINT_THRESHOLD=0.6

# ----------------------------------------------------------------------------
# Retrieval Configuration
# ----------------------------------------------------------------------------
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.6
RERANK_ENABLED=true
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_N=5

# ----------------------------------------------------------------------------
# Document Processing
# ----------------------------------------------------------------------------
SUPPORTED_DOCUMENT_FORMATS=pdf,docx,doc,pptx,ppt,txt,md
MAX_FILE_SIZE_MB=100
PARSING_STRATEGY=auto

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_V1_PREFIX=/api/v1
API_TITLE=FraudDocs RAG API
API_DESCRIPTION=RAG system for financial fraud detection documents
API_VERSION=1.0.0
ALLOWED_ORIGINS=*
ENABLE_CORS=true
MAX_UPLOAD_FILES=10

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=false
ALLOWED_API_KEYS=

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_STREAMING=false
ENABLE_CITATIONS=true
ENABLE_QUERY_EXPANSION=false
ENABLE_HYBRID_SEARCH=false
