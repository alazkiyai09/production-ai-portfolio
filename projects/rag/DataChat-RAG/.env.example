# =============================================================================
# DataChat-RAG Environment Configuration
# =============================================================================

# =============================================================================
# API Keys
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Alternative: Use Ollama for local models
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1

# Cohere API (for reranking)
COHERE_API_KEY=your-cohere-api-key-here

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=datachat_rag
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_SCHEMA=public

# =============================================================================
# Vector Database (ChromaDB)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./data/chromadb
CHROMA_COLLECTION_NAME=datachat_documents

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=DataChat-RAG
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Streamlit UI
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# =============================================================================
# RAG Configuration
# =============================================================================
# Chunking settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval settings
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7
RERANK_ENABLED=true
RERANK_TOP_N=3

# Text-to-SQL settings
SQL_MAX_RESULTS=100
SQL_TIMEOUT_SECONDS=30
SQL_RETURN_ROWS_LIMIT=50

# Conversation memory
MAX_CONTEXT_LENGTH=10
MEMORY_TTL_SECONDS=3600

# =============================================================================
# Document Processing
# =============================================================================
# Supported formats: pdf, txt, md, docx, html
SUPPORTED_DOC_FORMATS=pdf,txt,md,docx,html
MAX_DOC_SIZE_MB=20
DOC_INDEX_BATCH_SIZE=100

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# Monitoring & Analytics
# =============================================================================
ENABLE_TELEMETRY=false
LOG_QUERIES=true
LOG_QUERY_RESULTS=false

# =============================================================================
# Development Settings
# =============================================================================
RELOAD=true
SHOW_SQL_QUERIES=true
SHOW_RETRIEVAL_DOCS=true
