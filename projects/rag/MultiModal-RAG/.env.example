# ============================================================
# MultiModal-RAG Configuration
# ============================================================

# ===========================
# API Keys
# ===========================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================
# Vector Store Configuration
# ===========================
VECTOR_DB_TYPE=chroma  # chroma or qdrant
CHROMA_PERSIST_DIR=./data/vectordb
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Qdrant (if using Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=multimodal_rag

# ===========================
# Embedding Models
# ===========================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda  # cuda or cpu

# ===========================
# Multi-Modal Configuration
# ===========================
ENABLE_VISION=true
ENABLE_OCR=true
ENABLE_TABLE_EXTRACTION=true

# CLIP Model
CLIP_MODEL=ViT-B/32  # ViT-B/32, ViT-B/16, ViT-L/14
CLIP_DEVICE=cuda

# Image Captioning
CAPTIONING_MODEL=Salesforce/blip-image-captioning-base
ENABLE_CAPTIONING=true

# OCR Configuration
OCR_BACKEND=tesseract  # tesseract, paddleocr, easyocr, auto
OCR_LANGUAGES=en,zh

# Table Extraction
TABLE_EXTRACTION_BACKEND=camelot  # camelot, tabula
TABLE_FLAVOR=lattice  # lattice or stream

# ===========================
# LLM Configuration
# ===========================
LLM_PROVIDER=openai  # openai, anthropic, ollama
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Vision LLM
VISION_PROVIDER=openai  # openai or anthropic
VISION_MODEL=gpt-4o

# ===========================
# RAG Configuration
# ===========================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=10
RERANK_TOP_K=5

# Multi-modal retrieval weights
TEXT_WEIGHT=0.5
IMAGE_WEIGHT=0.3
TABLE_WEIGHT=0.2

# ===========================
# API Configuration
# ===========================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:8501

# ===========================
# UI Configuration
# ===========================
UI_TITLE=MultiModal RAG
UI_PORT=8501

# ===========================
# Processing
# ===========================
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=pdf,docx,md,txt,jpg,jpeg,png,gif,webp

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO
LOG_FILE=./logs/multimodal_rag.log

# ===========================
# Performance
# ===========================
BATCH_SIZE=32
NUM_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600
