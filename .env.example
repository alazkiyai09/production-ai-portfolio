# =============================================================================
# AgenticFlow Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and settings
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# LLM API Keys (Required)
# -----------------------------------------------------------------------------
# OpenAI API Key - Required for GPT-4/GPT-3.5 models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key - Optional, for Claude models
# If not provided, will use OpenAI models
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# -----------------------------------------------------------------------------
# Search API Keys
# -----------------------------------------------------------------------------
# Tavily Search API Key - Required for web search
# Get your key at: https://tavily.com/
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Default model to use for agents
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo, claude-3-opus-20240229
DEFAULT_MODEL=gpt-4-turbo-preview

# Fallback model if primary fails
FALLBACK_MODEL=gpt-3.5-turbo

# Temperature for agent responses (0.0 - 1.0)
MODEL_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Workflow Configuration
# -----------------------------------------------------------------------------
# Maximum number of iterations/steps per workflow execution
MAX_ITERATIONS=10

# Timeout in seconds for each agent step
TIMEOUT_SECONDS=300

# Enable/disable human-in-the-loop checkpoints
ENABLE_HUMAN_CHECKPOINT=true

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Host for FastAPI server
API_HOST=0.0.0.0

# Port for FastAPI server
API_PORT=8000

# Enable CORS for API
CORS_ENABLED=true

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Database/Storage Configuration (for checkpoints)
# -----------------------------------------------------------------------------
# Checkpoint storage backend: memory, sqlite, postgresql
CHECKPOINT_STORAGE=memory

# SQLite checkpoint database path (if using sqlite)
SQLITE_CHECKPOINT_PATH=./data/checkpoints.db

# PostgreSQL connection string (if using postgresql)
# POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/agenticflow

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to stdout only)
LOG_FILE=

# Enable JSON logging format
LOG_JSON=false

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable debug mode (additional logging, error details)
DEBUG=false

# Enable hot reload during development
RELOAD=true

# Number of worker processes for uvicorn
WORKERS=1
