# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=4096

# Application Settings
APP_NAME=AdInsights-Agent
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Data Settings
DATA_PATH=./data
SAMPLE_DATA_FILE=sample_campaigns.csv
MAX_ROWS=100000

# Analysis Settings
DEFAULT_TIME_WINDOW=30
ANOMALY_THRESHOLD=2.5  # Standard deviations
TREND_CONFIDENCE=0.95
MIN_DATA_POINTS=10

# Agent Settings
MAX_ANALYSIS_STEPS=10
AGENT_TIMEOUT=300
ENABLE_REFLECTION=false

# Visualization Settings
CHART_WIDTH=1200
CHART_HEIGHT=600
CHART_DPI=100
PLOTLY_THEME=plotly_white

# Report Settings
REPORT_FORMAT=html
INCLUDE_CHARTS=true
INCLUDE_STATISTICS=true
MAX_INSIGHTS=20

# Database (Optional - for future use)
DATABASE_URL=sqlite:///./data/adinsights.db

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090
